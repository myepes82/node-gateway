{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./info/.tsbuildinfo.json",
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    //"moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
   "preserveSymlinks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {},
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "**.js",
    "info",
    "__tests__"
  ]
}
